<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane stylesheets="@addbook.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="library.AddbookController">
   <center>
      <VBox prefHeight="250.0" prefWidth="350.0">
         <children>
            <Label style="-fx-background-color: transparent;" text="Book Title">
               <VBox.margin>
                  <Insets left="20.0" right="20.0" top="5.0" />
               </VBox.margin>
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Label>
            <TextField fx:id="title" onAction="#save" promptText="Book Title">
               <VBox.margin>
                  <Insets bottom="5.0" left="20.0" right="20.0" top="1.0" />
               </VBox.margin>
               <font>
                  <Font size="14.0" />
               </font>
            </TextField>
            <Label style="-fx-background-color: transparent;" text="Book ID">
               <VBox.margin>
                  <Insets left="20.0" right="20.0" top="5.0" />
               </VBox.margin>
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Label>
            <TextField fx:id="id" onAction="#save" promptText="Book ID">
               <VBox.margin>
                  <Insets bottom="5.0" left="20.0" right="20.0" top="1.0" />
               </VBox.margin>
               <font>
                  <Font size="14.0" />
               </font>
            </TextField>
            <Label style="-fx-background-color: transparent;" text="Book Publisher">
               <VBox.margin>
                  <Insets left="20.0" right="20.0" top="5.0" />
               </VBox.margin>
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Label>
            <TextField fx:id="publish" onAction="#save" promptText="Book Publisher">
               <VBox.margin>
                  <Insets bottom="5.0" left="20.0" right="20.0" top="1.0" />
               </VBox.margin>
               <font>
                  <Font size="14.0" />
               </font>
            </TextField>
            <Label style="-fx-background-color: transparent;" text="Book Author">
               <VBox.margin>
                  <Insets left="20.0" right="20.0" top="5.0" />
               </VBox.margin>
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Label>
            <TextField fx:id="author" onAction="#save" promptText="Book Author">
               <VBox.margin>
                  <Insets bottom="5.0" left="20.0" right="20.0" top="1.0" />
               </VBox.margin>
               <font>
                  <Font size="14.0" />
               </font>
            </TextField>
         </children>
      </VBox>
   </center>
   <top>
      <Label prefWidth="350.0" text="Atrangi Library Management Application" textFill="ORANGE" BorderPane.alignment="CENTER">
         <font>
            <Font name="MV Boli" size="18.0" />
         </font>
      </Label>
   </top>
   <bottom>
      <BorderPane prefHeight="56.0" prefWidth="350.0" BorderPane.alignment="CENTER">
         <left>
            <Button fx:id="save" mnemonicParsing="false" onAction="#save" onKeyPressed="#save" prefWidth="175.0" text="Save" BorderPane.alignment="CENTER">
               <font>
                  <Font size="30.0" />
               </font>
            </Button>
         </left>
         <right>
            <Button fx:id="cancel" mnemonicParsing="false" onAction="#cancel" prefWidth="175.0" text="Cancel" BorderPane.alignment="CENTER">
               <font>
                  <Font size="30.0" />
               </font>
            </Button>
         </right>
      </BorderPane>
   </bottom>
</BorderPane>
