<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" styleClass="mainFxmlClass" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="library.BookDetailsController">
   <stylesheets>
      <URL value="@bookdetails.css" />
   </stylesheets>
   <children>
      <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <Label fx:id="logo" alignment="CENTER" prefHeight="17.0" prefWidth="635.0" text="Atrangi Library Management Application" textFill="ORANGE">
               <font>
                  <Font name="MV Boli" size="16.0" />
               </font>
            </Label>
            <TableView fx:id="table" prefHeight="373.0" prefWidth="600.0">
               <columns>
                  <TableColumn fx:id="bookID" minWidth="150.0" prefWidth="150.0" text="Book ID" />
                  <TableColumn fx:id="bookname" minWidth="150.0" prefWidth="150.0" text="Book Name" />
                  <TableColumn fx:id="publisher" minWidth="150.0" prefWidth="150.0" text="Book Publisher" />
                  <TableColumn fx:id="author" minWidth="150.0" prefWidth="150.0" text="Book Author" />
               </columns>
            </TableView>
         </children>
      </VBox>
   </children>
</AnchorPane>
