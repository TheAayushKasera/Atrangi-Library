<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane stylesheets="@addmember.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="library.AddmemberController">
   <center>
      <VBox prefHeight="250.0" prefWidth="350.0">
         <children>
            <Label style="-fx-background-color: transparent;" text="Member Name">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
               <VBox.margin>
                  <Insets left="20.0" right="20.0" top="5.0" />
               </VBox.margin>
            </Label>
            <TextField fx:id="name" onAction="#save" promptText="Member Name">
               <VBox.margin>
                  <Insets bottom="5.0" left="20.0" right="20.0" top="1.0" />
               </VBox.margin>
               <font>
                  <Font size="14.0" />
               </font>
            </TextField>
            <Label style="-fx-background-color: transparent;" text="Member ID">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
               <VBox.margin>
                  <Insets left="20.0" right="20.0" top="5.0" />
               </VBox.margin>
            </Label>
            <TextField fx:id="id" onAction="#save" promptText="Member ID">
               <VBox.margin>
                  <Insets bottom="5.0" left="20.0" right="20.0" top="1.0" />
               </VBox.margin>
               <font>
                  <Font size="14.0" />
               </font>
            </TextField>
            <Label style="-fx-background-color: transparent;" text="Member Mobile no.">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
               <VBox.margin>
                  <Insets left="20.0" right="20.0" top="5.0" />
               </VBox.margin>
            </Label>
            <TextField fx:id="mobile" onAction="#save" promptText="Member Mobile No.">
               <VBox.margin>
                  <Insets bottom="5.0" left="20.0" right="20.0" top="1.0" />
               </VBox.margin>
               <font>
                  <Font size="14.0" />
               </font>
            </TextField>
            <Label style="-fx-background-color: transparent;" text="Member Address">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
               <VBox.margin>
                  <Insets left="20.0" right="20.0" top="5.0" />
               </VBox.margin>
            </Label>
            <TextField fx:id="address" onAction="#save" promptText="Member Address">
               <VBox.margin>
                  <Insets bottom="5.0" left="20.0" right="20.0" top="1.0" />
               </VBox.margin>
               <font>
                  <Font size="14.0" />
               </font>
            </TextField>
         </children>
      </VBox>
   </center>
   <top>
      <Label prefWidth="350.0" text="Atrangi Library Management Application" textFill="ORANGE" BorderPane.alignment="CENTER">
         <font>
            <Font name="MV Boli" size="18.0" />
         </font>
      </Label>
   </top>
   <bottom>
      <HBox prefHeight="64.0" prefWidth="350.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="save" mnemonicParsing="false" onAction="#save" onKeyPressed="#save" prefWidth="175.0" text="Save">
               <font>
                  <Font size="30.0" />
               </font>
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </Button>
            <Button fx:id="cancel" mnemonicParsing="false" onAction="#cancel" prefWidth="175.0" text="Cancel">
               <font>
                  <Font size="30.0" />
               </font>
            </Button>
         </children>
      </HBox>
   </bottom>
</BorderPane>
